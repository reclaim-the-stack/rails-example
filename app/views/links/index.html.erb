<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "links" %>

<h1>Links</h1>

<div id="links" style="margin-bottom: 2rem">
  <% @links.each do |link| %>
    <%= render link %>

    <%= button_to "Destroy this link", link, method: :delete %>
  <% end %>
</div>

<%= link_to "New link", new_link_path %>
